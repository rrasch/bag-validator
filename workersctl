#!/bin/bash
#
# task-queue	Start up Task Queue
#
# chkconfig: 2345 99 01
# description: Task Queue runs jobs in parallel.
# pidfile: /content/prod/rstar/tmp/taskqueueserver.pid

exec 2>&1
# set -x
set -e

if [ -f /content/prod/rstar/etc/taskqueue.sysconfig ]
    . /content/prod/rstar/etc/taskqueue.sysconfig
fi

TQHOME=${TQHOME:-/usr/local/dlib/task-queue}

PIDFILE=${PIDFILE:-/content/prod/rstar/tmp/taskqueueserver.pid}

LOGDIR=${LOGDIR:-/content/prod/rstar/tmp/mdi/task-queue/logs}

MQHOST=${MQHOST:-localhost}

RVMRC=${RVMRC:-$HOME/.rvm/scripts/rvm}

if [ -s $RVMRC ]; then
	. $RVMRC
fi

RETVAL=0

start() {
	HOST=$(hostname -s)
	LOGFILE=$LOGDIR/$HOST/worker.$HOST.log
	$TQHOME/workers.rb -m $MQHOST -l $LOGFILE
	RETVAL=$?
}

stop() {
	if [ -f $PIDFILE ]; then
		kill `cat $PIDFILE`
		RETVAL=$?
	fi
}

restart() {
	stop
	sleep 5
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|force-reload|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}" >&2
	exit 3
	;;
esac

exit $RETVAL
