#!/bin/bash
#
# task-queue	Start up Task Queue
#
# chkconfig: 2345 99 01
# description: Task Queue runs jobs in parallel.
# pidfile: /content/prod/rstar/tmp/taskqueueserver.pid

exec 2>&1
# set -x
set -e

CONFIG_FILE=/content/prod/rstar/etc/taskqueue.sysconfig

if [ -f "$CONFIG_FILE" ]; then
    . $CONFIG_FILE
fi

TQHOME=${TQHOME:-/usr/local/dlib/task-queue}

TQUSER=${TQUSER:-rstar}

PIDFILE=${PIDFILE:-/content/prod/rstar/tmp/taskqueueserver.pid}

LOGDIR=${LOGDIR:-/content/prod/rstar/tmp/mdi/task-queue/logs}

MQHOST=${MQHOST:-localhost}

RVMRC=${RVMRC:-$TQHOME/.rvm/scripts/rvm}

if [ -s $RVMRC ]; then
	. $RVMRC
fi

RETVAL=0

start() {
	HOST=$(hostname -s)
	LOGFILE=$LOGDIR/$HOST/worker.$HOST.log
	CMD="$TQHOME/workers.rb -m $MQHOST -l $LOGFILE -p $PIDFILE"
	if [ "$TQUSER" = "$(whoami)" ]; then
		$CMD
	else
		if [ -f $LOGFILE ]; then
			TQGROUP=$(id -gn $TQUSER)
			chown $TQUSER:$TQGROUP $LOGFILE
		fi
		su -ls /bin/bash $TQUSER -c "$CMD"
	fi
	RETVAL=$?
}

stop() {
	if [ -f $PIDFILE ]; then
		kill `cat $PIDFILE`
		RETVAL=$?
	fi
}

restart() {
	stop
	sleep 5
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|force-reload|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}" >&2
	exit 3
	;;
esac

exit $RETVAL
