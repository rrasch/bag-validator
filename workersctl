#!/bin/bash

exec 2>&1
# set -x
set -e

PIDFILE=taskqueueserver.pid

MQHOST=${MQHOST:-localhost}

RVMRC=$HOME/.rvm/scripts/rvm

if [ -s $RVMRC ]; then
	. $RVMRC
fi

RETVAL=0

start() {
	./workers.rb -m $MQHOST
	RETVAL=$?
}

stop() {
	if [ -f $PIDFILE ]; then
		kill `cat $PIDFILE`
		RETVAL=$?
	fi
}

restart() {
	stop
	sleep 5
	start
}

case "$1" in
  start)
	start
	;;
  stop)
	stop
	;;
  restart|force-reload|reload)
	restart
	;;
  *)
	echo "Usage: $0 {start|stop|restart}" >&2
	exit 3
	;;
esac

exit $RETVAL
